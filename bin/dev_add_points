#!/usr/bin/env python
import os
import time
import subprocess

args = ['./src/dev_add_point', 'd7032e0a18d2902dccbfc8384e4bc537']

while True:
	avg = open('/proc/loadavg').read().strip()
	parts = avg.split(' ')
	subprocess.Popen(args + ['load1', parts[0]])
	subprocess.Popen(args + ['load5', parts[1]])
	subprocess.Popen(args + ['load15', parts[2]])
	time.sleep(30)
