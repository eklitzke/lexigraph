#!/usr/bin/env python
import os
import time
import subprocess

args = ['./src/dev_add_point', 'ea05f4120b2660646efc78f5d10b07a8']

while True:
	avg = open('/proc/loadavg').read().strip()
	parts = avg.split(' ')
	subprocess.Popen(args + ['load1', parts[0]])
	subprocess.Popen(args + ['load5', parts[1]])
	subprocess.Popen(args + ['load15', parts[2]])
	time.sleep(30)
