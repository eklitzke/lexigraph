#!/usr/bin/env python
import os
import time
import subprocess

args = ['./src/dev_add_point', '0a0b16f0fff054ae0724533afdd4944b']

while True:
	avg = open('/proc/loadavg').read().strip()
	parts = avg.split(' ')
	subprocess.Popen(args + ['load1', parts[0]])
	subprocess.Popen(args + ['load5', parts[1]])
	subprocess.Popen(args + ['load15', parts[2]])
	time.sleep(30)
